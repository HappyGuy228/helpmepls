#include <iostream>
#include <math.h>
using namespace std;

int main(){
    setlocale(LC_ALL, "rus");
    int zad;
    while (true){
        cout << "Введите номер задания (1-5): ";
        cin >> zad;
        if (zad == 1){
            int n;
            cout << "Введите целое положительное n: ";
            cin >> n;
            int mass[]{ n };
            for(int i = 0; i < n; i++){
                mass[i] = 1 + 2 * i;
            }
            cout << "Тогда выведется массив: ";
            for(int i = 0; i < n; i++){
                cout << mass[i] << " ";
            }
            cout << endl;
        }
        if (zad == 2){
            int n;
            float a, d;
            cout << "Введите n > 1: ";
            cin >> n;
            cout << "Введите a: ";
            cin >> a;
            cout << "Введите d: ";
            cin >> d;
            int mass[]{ n };
            for(int i = 0; i < n; i++){
                mass[i] = a * pow(d, i);
            }
            cout << "Тогда выведется массив: ";
            for(int i = 0; i < n; i++){
                cout << mass[i] << " ";
            }
            cout << endl;
        }
        if (zad == 3){
            int n, a, b;
            cout << "Введите n > 2: ";
            cin >> n;
            cout << "Введите a: ";
            cin >> a;
            cout << "Введите b: ";
            cin >> b;
            int mass[]{ n };
            mass[0] = a;
            mass[1] = b;
            int sum = a + b;
            for(int i = 2; i < n; i++){
                mass[i] = sum;
                sum += mass[i];
            }
            for(int i = 0; i < n; i++){
                cout << mass[i] << " ";
            }
            cout << endl;
        }
        if (zad == 4){
            int n;
            cout << "Введите n: ";
            cin >> n;
            int a[]{ n };
            for(int i = 0; i < n; i++){
                cout << i + 1 << "-ый элемент: ";
                cin >> a[i];
            }
            cout << "Исходный массив: ";
            for(int i = 0; i < n; i++){
                cout << a[i] << " ";
            }
            cout << endl;
            cout << "Конечный массив: ";
            for(int i = 0; i < n / 2; i++){
                cout << a[i] << " ";
                cout << a[n - i - 1] << " ";
            }
            if (n % 2 != 0){
                cout << a[(n / 2)];
            }
            cout << endl;
        }
        if (zad == 5){
            int n;
            cout << "Введите n: ";
            cin >> n;
            int a[]{ n };
            for(int i = 0; i < n; i++){
                cout << i + 1 << "-ый элемент: ";
                cin >> a[i];
            }
            cout << "Исходный массив: ";
            for(int i = 0; i < n; i++){
                cout << a[i] << " ";
            }
            cout << endl;
            cout << "Конечный массив: ";
            for(int i = 0; i < n; i += 2){
                cout << a[i] << " ";
            }
            if (n % 2 == 0){
                for(int i = n - 1; i >= 1; i -= 2){
                    cout << a[i] << " ";
                }
            }
            else{
                for(int i = n - 2; i >= 1; i -= 2){
                    cout << a[i] << " ";
                }
            }
            cout << endl;
            break;
        }
    }
    return 0;
}
