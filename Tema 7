ЗАДАНИЕ 1

#include <iostream>
using namespace std;

int main(){
    setlocale(LC_ALL, "rus");
    int alpha;
    float pi = 3.14;
    cout << "Значение угла в градусах: ";
    cin >> alpha;
    if (alpha > 0 && alpha <= 360){
        cout << "Значение угла в радианах:" << (double)(alpha * pi)/180 << endl;
    }
    else{
        cout << "Не удовлетворяет условиям задачи";
    }
    return 0;
}

