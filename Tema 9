#include <iostream>
#include <math.h>
using namespace std;

int main(){
    setlocale(LC_ALL, "rus");
    int zad;
    while (true){
        cout << "Введите номер задания (1-5): ";
        cin >> zad;
        if (zad == 1){
            int N, A;
            cout << "С начала суток прошло секунд: ";
            cin >> N;
            cout << "Столько секунд прошло с начала последней минуты: " << N % 60 << endl;
        }
        if (zad == 2){
            int K, A;
            cout << "Введите номер дня года: ";
            cin >> K;
            if (K >= 1 && K <= 365){
                A = K % 7;
                cout << "Номер дня недели: " << A << endl;
            }
            else{
                cout << "Не удовлетворяет условию задачи" << endl;
            }
        }
        if (zad == 3){
            int K, N, A;
            cout << "Введите номер дня года: ";
            cin >> K;
            cout << "Введите день недели 1 января: ";
            cin >> N;
            A = (K + N - 1) % 7;
            if (K >= 1 && K <= 365 && N >= 1 && N <= 7){
                cout << "Номер дня недели при заданном дне недели 1 января: " << A << endl;
            }
            else{
                cout << "Не удовлетворяет условиям задачи" << endl;
            }
        }
        if (zad == 4){
            int A, B, C, Q;
            cout << "Введите целое положительное A: ";
            cin >> A;
            cout << "Введите целое положительное B: ";
            cin >> B;
            cout << "Введите целое положительное C: ";
            cin >> C;
            Q = (A / C) * (B / C);
            cout << "Количество квадратов, размещенных на прямоугольнике: " << Q << endl;
            cout << "Площадь незатяной части прямоугольника: " << (A * B) - Q * (C * C) << endl;
        }
        if (zad == 5){
            int N;
            cout << "Введите номер некоторого года N: ";
            cin >> N;
            cout << "Тогда номер соответствующего столетия: " << (N - 1) / 100 + 1 << endl;
	        break;
        }
    }
    return 0;
}
