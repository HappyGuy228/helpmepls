ЗАДАНИЕ 1

#include <iostream>
using namespace std;

int main(){
     	setlocale(LC_ALL, "rus");
    	int a, b;
    	cout << "Введите целое a: " << endl;
    	cin >> a;
    	cout << "Введите целое b: " << endl;
    	cin >> b;
    	int S, P;
    	S = a * b;
    	cout << "Площадь равна: " << S << endl;
    	P = 2 * (a + b);
    	cout << "Периметр равен: " << P << endl;
    	return 0;
}

ЗАДАНИЕ 2

#include <iostream>
using namespace std;

int main() {
	setlocale(LC_ALL, "rus");
	const float pi = 3.14;
	float d, L;
  	cout << "Введите диаметр окружности d: " << endl;
	cin >> d;
	L = pi * d;
	cout << "Длина окружности равна: " << L << endl;
	return 0;
}

ЗАДАНИЕ 3

#include <iostream>
using namespace std;

int main() {
	setlocale(LC_ALL, "rus");
	int a, b;
  	cout << "Введите  целое a: " << endl;
	cin >> a;
  	cout << "Введите целое b: " << endl;
	cin >> b;
	cout << "Среднее арифметическое равно: " << (float)(a + b) / 2 << endl;
	return 0;
}

ЗАДАНИЕ 4

#include <iostream>
#include <math.h>
using namespace std;

int main() {
	setlocale(LC_ALL, "rus");
	int a, b;
  	cout << "Введите целое a: " << endl;
	cin >> a;
  	cout << "Введите целое b: " << endl;
	cin >> b;
	cout << "Сумма квадратов равна: " << pow(a, 2) + pow(b, 2) << endl;
	cout << "Разность квадратов равна: " << pow(a, 2) - pow(b, 2) << endl;
	cout << "Произведение квадратов равна: " << pow(a, 2) * pow(b, 2) << endl;
	cout << "Частное квадратов равна: " << (float)pow(a, 2) / pow(b, 2) << endl;
	return 0;
}

ЗАДАНИЕ 5

#include <iostream>
using namespace std;

int main() {
	setlocale(LC_ALL, "rus");
	int a, b;
	cout << "Введите целое a: " << endl;
  	cin >> a;
  	cout << "Введите целое b: " << endl;
	cin >> b;
	cout << "Сумма модулей равна: " << abs(a) + abs(b) << endl;
	cout << "Разность модулей равна: " << abs(a) - abs(b) << endl;
	cout << "Произведение модулей равна: " << abs(a) * abs(b) << endl;
	cout << "Частное модулей равна: " << (float)abs(a) / abs(b) << endl;
	return 0;
}
